# Spend Tracker Backend Configuration
# Copy this file to .env and update with your settings

# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_DATABASE=spend_tracker

# Flask Configuration
SECRET_KEY=your-super-secret-key-for-jwt-tokens-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Optional: API Configuration
API_BASE_URL=http://localhost:5000/api

# Optional: CORS Settings (for production)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: JWT Token Expiration (in days)
JWT_EXPIRATION_DAYS=7

# Optional: File Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=uploads

# Optional: Email Configuration (for future features)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Optional: Backup Settings
# BACKUP_DIRECTORY=backups
# AUTO_BACKUP_ENABLED=true
# BACKUP_RETENTION_DAYS=30