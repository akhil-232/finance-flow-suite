# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=spend_tracker

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# Security Settings
JWT_EXPIRATION_DAYS=7
BCRYPT_LOG_ROUNDS=12
MAX_CONTENT_LENGTH=16777216

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@spendtracker.app

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,csv,xlsx

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# External API Keys (Optional)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
SENTRY_DSN=your-sentry-dsn

# Backup Configuration
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *

# Performance Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Feature Flags
ENABLE_MULTI_USER=True
ENABLE_EMAIL_VERIFICATION=False
ENABLE_PASSWORD_RESET=True
ENABLE_RECURRING_TRANSACTIONS=True
ENABLE_BUDGET_GOALS=True
ENABLE_EXPORT_FEATURES=True
ENABLE_AUDIT_LOG=True

# Development Settings
TESTING=False
WTF_CSRF_ENABLED=True
SQL_ECHO=False

# Production Settings (Set these in production)
# SSL_DISABLE=False
# DATABASE_URL=mysql://user:password@host:port/database
# REDIS_TLS_URL=rediss://user:password@host:port/0